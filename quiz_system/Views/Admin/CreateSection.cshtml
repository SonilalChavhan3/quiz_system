@model Section
@{
    ViewData["Title"] = "Create Section";
}
<h2>Create New Section</h2>

<form asp-action="CreateSection" method="post">
    <div class="form-group">
        <label for="Name">Section Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
    </div>

    <div class="form-group">
        <label for="TimeLimitInMinutes">Time Limit (Minutes)</label>
        <input type="number" class="form-control" id="TimeLimitInMinutes" name="TimeLimitInMinutes" value="@Model.TimeLimitInMinutes" required />
    </div>

    <button type="submit" class="btn btn-primary">Create Section</button>
</form>
