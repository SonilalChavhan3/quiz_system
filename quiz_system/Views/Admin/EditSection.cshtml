@model Section
@{
    ViewData["Title"] = "Edit Section";
}
<h2>Edit Section</h2>

<form asp-action="EditSection" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label for="Name">Section Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
    </div>

    <div class="form-group">
        <label for="TimeLimitInMinutes">Time Limit (Minutes)</label>
        <input type="number" class="form-control" id="TimeLimitInMinutes" name="TimeLimitInMinutes" value="@Model.TimeLimitInMinutes" required />
    </div>

    <button type="submit" class="btn btn-primary">Update Section</button>
</form>
