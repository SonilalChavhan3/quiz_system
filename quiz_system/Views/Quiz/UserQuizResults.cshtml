@model IEnumerable<QuizAttempt>

<div class="container mt-5">
    <h2 class="text-center">Your Quiz Results</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info">@TempData["Message"]</div>
    }

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Attempt Date</th>
                    <th>Section</th>
                    <th>Total Questions</th>
                    <th>Correct Answers</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var attempt in Model)
                {
                    <tr>
                        <td>@attempt.AttemptedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td>@attempt.Section.Name</td>
                        <td>@attempt.UserQuizResults.Count()</td>
                        <td>@attempt.UserQuizResults.Count(r => r.IsCorrect)</td>
                       
                        <td>
                            <a href="@Url.Action("VievQuizResult", "Quiz", new { sectionId = attempt.SectionId,attempId = attempt.Id })" class="btn btn-info btn-sm">View Results</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


