@inject SignInManager<ApplicationUser> signInManager
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - quiz_system</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/quiz_system.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">quiz_system</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="ManageSections">Admin</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Quiz" asp-action="Index">Take Quiz</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Quiz" asp-action="UserQuizResults">View All Results</a>
                        </li>
                    </ul>
                </div>
                <div class="text-end">
                    @if (signInManager.IsSignedIn(User))
                    {
                        <ul class="nav col-12 col-lg-auto me-lg-auto">

                            <li>
                               @*  <a class="btn btn-outline-light me-2 " asp-action="EditUser" asp-controller="Administration" asp-route-id="@UserManager.GetUserId(User)">Hello @User.Identity.Name!</a> *@
                                <a class="btn btn-outline-light me-2 " >Hello @User.Identity.Name!</a>
                            </li>

                            <li>
                                <a class="btn btn-warning" asp-action="Logout" asp-controller="Account">Logout</a>
                            </li>
                        </ul>

                    }
                    else
                    {
                        <ul class="nav col-12 col-lg-auto me-lg-auto">

                            <li>
                                <a class="btn btn-outline-primary me-2 " asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                            </li>

                            <li>
                                <a class="btn btn-outline-primary" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        </ul>

                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - quiz_system - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <partial name="_ValidationScriptsPartial" />
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
