@model IEnumerable<Quiz>

<h2>Available Quizzes</h2>

<form action="@Url.Action("TakeQuiz", "User")" method="get">
    <div class="form-group">
        <label for="username">Enter your Username:</label>
        <input type="text" id="username" name="username" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="quizId">Select a Quiz:</label>
        <select id="quizId" name="quizId" class="form-control" required>
            @foreach (var quiz in Model)
            {
                <option value="@quiz.Id">@quiz.Question</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Start Quiz</button>
</form>

