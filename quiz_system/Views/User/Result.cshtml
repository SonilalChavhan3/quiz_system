@model UserQuizResult

<h2>Quiz Result</h2>

<p><strong>Username:</strong> @Model.UserId</p>
<p><strong>Selected Answer:</strong> @Model.SelectedAnswer</p>
<p><strong>Correct Answer:</strong> @Model.IsCorrect ? "Yes" : "No"</p>
@if (Model.IsCorrect)
{
    <p style="color:green;">Congratulations! You got the correct answer.</p>
}
else
{
    <p style="color:red;">Oops! That was incorrect. The correct answer is: @Model.CorrectAnswer.</p>
}
<a href="@Url.Action("Index", "User")" class="btn btn-primary mt-3">Go Back to Quiz List</a>
