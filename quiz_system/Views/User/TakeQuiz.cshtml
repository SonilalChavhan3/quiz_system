@model Quiz

<h2>@Model.Question</h2>

<form method="post" asp-action="SubmitQuiz">
    <input type="hidden" name="quizId" value="@Model.Id" />

    <div class="form-group">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" class="form-control" required />
    </div>

    <div class="form-check">
        <input type="radio" id="optionA" name="selectedAnswer" value="@Model.OptionA" class="form-check-input" required />
        <label class="form-check-label" for="optionA">@Model.OptionA</label>
    </div>

    <div class="form-check">
        <input type="radio" id="optionB" name="selectedAnswer" value="@Model.OptionB" class="form-check-input" required />
        <label class="form-check-label" for="optionB">@Model.OptionB</label>
    </div>

    <div class="form-check">
        <input type="radio" id="optionC" name="selectedAnswer" value="@Model.OptionC" class="form-check-input" required />
        <label class="form-check-label" for="optionC">@Model.OptionC</label>
    </div>

    <div class="form-check">
        <input type="radio" id="optionD" name="selectedAnswer" value="@Model.OptionD" class="form-check-input" required />
        <label class="form-check-label" for="optionD">@Model.OptionD</label>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>
